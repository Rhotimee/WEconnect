{
  "name": "weconnect",
  "version": "1.0.0",
  "description": "WeConnect provides a platform that brings businesses and individuals together.",
  "main": "./server/server.js",
  "scripts": {
    "start": "node ./dist/server.js",
    "dev-start": "nodemon --exec babel-node server/server.js",
    "build": "babel server -d ./dist --ignore server/dist",
    "postinstall": "npm run build",
    "test": "nyc --reporter=html --reporter=text mocha server/tests/ --exit --compilers js:babel-register",
    "test-watch": "nodemon --exec \"npm test\"",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "coveralls": "nyc --reporter=lcov --reporter=text-lcov npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Rhotimee/weconnect.git"
  },
  "author": "Yemitan Isaiah",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Rhotimee/weconnect/issues"
  },
  "dependencies": {
    "body-parser": "~1.18.2",
    "cookie-parser": "~1.4.3",
    "express": "~4.15.5",
    "morgan": "~1.9.0",
    "chai": "^4.1.2",
    "chai-http": "^3.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "coveralls": "^3.0.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-react": "^1.1.7",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "mocha": "^5.0.4",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.17.1",
    "nyc": "^11.4.1"
  }
}
